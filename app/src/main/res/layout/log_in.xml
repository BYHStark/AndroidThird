<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainFrame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/backImg"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        android:scaleX="3"
        android:scaleY="3"
        android:src="@drawable/pp" />

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        tools:context="com.example.myclient.MainActivity">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="150dp"
                android:text="用户名" />

            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tvUserName"
                android:layout_alignStart="@+id/tvUserName"
                android:layout_alignTop="@+id/etxtPassword"
                android:text="密码" />

            <EditText
                android:id="@+id/etxtPassword"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/etxtUserName"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/etxtUserName"
                android:layout_marginTop="206dp"
                android:inputType="textPassword"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/etxtUserName"
                android:layout_width="210dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="140dp"
                android:ems="10"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="243dp"
                android:layout_toEndOf="@+id/tvUserName"
                android:text="注册" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/btnRegister"
                android:layout_marginEnd="56dp"
                android:text="登陆" />

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginStart="30dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/fb"
            android:layout_marginRight="10dp" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/tw"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ln" />

    </LinearLayout>


</FrameLayout>